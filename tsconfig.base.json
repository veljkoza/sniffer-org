{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "noPropertyAccessFromIndexSignature": false,
    "strictPropertyInitialization": false,
    "paths": {
      "@sniffer/ui": ["packages/ui/src/index.ts"],
      "@sniffer/domain": ["packages/domain/src/index.ts"],
      "@sniffer/frontend-services": ["packages/frontend-services/src/index.ts"],
      "@sniffer/infrastructure": ["packages/infrastructure/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
